<header>
  <div class="header-container" id="menu_container">

  <div class="container">
  
  <a class="site-logo" href=<%= root_url%> ><img src="/images/logo-white.png"></a>

    <nav class="main-nav nav">
      <ul id="menu">
        <li>
          <input style="width:500px;" class="controls" placeholder="Search for a teacher or school" type="text" id="pac-input" placeholder="Search Box" required>
        </li>        
      </ul>
    </nav>

    <div class="right social">
			<% if user_signed_in? %>
        Hello, <b><%= current_user.first_name.capitalize rescue current_user.email %>! </b>
        <%= link_to "Logout", destroy_user_session_path %>
			<% else %>
				<%= link_to 'Log In', new_user_session_path, class: "btn--secondary" %> 
				<%= link_to "Sign Up", new_registration_path(resource_name), class: "btn--primary" %>
			<% end %>
    </div>
  </div>
</header>