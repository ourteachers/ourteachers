<div class="page-wrap">
	<div class="container wrapper-sm">

	<div class="modal">
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

	  <h1 class="m--b center">Join us today.</h1>

	  <div class="input-grouping">
	    <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
	  </div>

	  <div class="input-grouping">
	  		<%= f.text_field :last_name, placeholder: "Last Name", required: true, size: 40 %>
	  </div>

	  <div class="input-grouping">
	  		<%= f.email_field :email, placeholder: "Email Address", required: true, size: 40 %>
	  </div>

	  <div class="input-grouping">
    	<%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true, size: 40 %>
	  </div>

	  <div class="input-grouping">
    	<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", required: true, size: 40 %>
	  </div>       

      <%= f.submit "Sign up", class: "btn--primary large", style: "width:100%; height: 40px;" %>
	<% end %>

	</div>
</div>